class Mario {
  float x, y;
  int speed = 5;
  int dir;
  PImage sprite;
  
  void move() {
    x += speed * dir; 
  }
  
  void draw() {
    int gridPosX = int((x-squareW/2)/28 + 5);
    
    if (gridPosX >= 16)
      offset -= 1.9 * (gridPosX - 16);
    
    image(sprite, x + squareW*5 - squareW/2, y + squareH*31 - squareH/2 + offset, squareW, squareH); 
    println(x, speed, dir, gridPosX, offset);
  }
}


